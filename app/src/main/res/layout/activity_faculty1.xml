<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faculty1">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFaculty"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/add_fab"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        app:icon="@drawable/ic_add_black"
        app:srcCompat="@drawable/ic_add_black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/join_class_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        app:srcCompat="@drawable/ic_person_add_black" />

    <TextView
        android:id="@+id/join_class_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="26dp"
        android:text="Join Class" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_class_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="118dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        app:srcCompat="@drawable/ic_create_black" />

    <TextView
        android:id="@+id/new_class_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="175dp"
        android:background="@color/white"
        android:text="Create Class"
        android:textColor="@color/black" />
</RelativeLayout>